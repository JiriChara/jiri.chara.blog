<script type="text/javascript">
  $('.main-container').append('Loading...');

  $.ajax({
    type: '<%= session[:return_to][:method] %>',
    url:  '<%= session[:return_to][:url] %>',
    data: <%= session[:return_to][:params].merge(friendly_fwd: true).to_json.html_safe %>,
    success: function() {},
    error: function() { window.location.href = "/"; }
  });

  <% session.delete(:return_to) %>
</script>
