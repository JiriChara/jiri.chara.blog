$('#comment-<%= @comment.id.to_s %>').replaceWith('<%=j render(partial: 'comments/form',
  locals: { comment: @comment, article: @comment.article, not_reply: true}) %>');

$('#comment-<%= @comment.id.to_s %>-form .comment-text-area').focus().val('<%=j @comment.text.html_safe %>');

$('#comment-<%= @comment.id.to_s %>-form').on('click', '.close-form', function() {
  $('#comment-<%= @comment.id.to_s %>-form').replaceWith('<%=j render(partial: 'comments/comment',
    locals: { comment: @comment }) %>');
});
