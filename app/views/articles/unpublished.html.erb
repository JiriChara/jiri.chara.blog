<table class="table table-bordered">
  <thead>
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>Type</th>
      <th>Created At</th>
      <th>Updated At</th>
      <th>Publish</th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.id %></td>
        <td><%= link_to article.title, article_path(article) %></td>
        <td><%= article.class.to_s %></td>
        <td><%= article.created_at.strftime("%Y-%m-%d @ %H:%M") %></td>
        <td><%= article.updated_at.strftime("%Y-%m-%d @ %H:%M") %></td>
        <td>
          <%= link_to publish_article_path(article), method: :patch, title: "Publish",
            confirm: "Are you sure?", 'data-confirm-title' => "Publish article: #{truncate(article.title, length: 20)}?" do %>
            <i class="icon-smile"></i> Publish
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @articles %>
